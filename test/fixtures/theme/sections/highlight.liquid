<div class="highlight" data-section-id="{{ section.id }}" data-section-type="highlight-section">
  <div class="page-width page-width--narrow">
    <div class="highlight__wrapper">
      <div class="highlight__image-container highlight__image-container--{{ section.settings.image_alignment }} highlight__image-container--{{ section.settings.image_position }}">
        {% if section.settings.image == blank %}
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg highlight__image' }}
        {% else %}
          <img class="highlight__image {% if section.settings.tilt_image %}highlight__image--tilt{% endif %}" src="{{ section.settings.image | img_url: '700x', crop: 'center' }}">
        {% endif %}
      </div>
      <div class="highlight__content-container highlight__content-container--{{ section.settings.content_position }}">
        <h2 class="h3">{{ section.settings.heading }}</h2>
        <p>{{ section.settings.text }}</p>
        {% if section.settings.show_button %}
          <a class="btn" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>

      <div class="highlight__border"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Highlight section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "checkbox",
      "id": "tilt_image",
      "label": "Tilt animation",
      "info": "Tilt image to follow mouse",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Image alignment",
      "default": "middle",
      "options": [
        {
          "label": "Top",
          "value": "top"
        },
        {
          "label": "Middle",
          "value": "middle"
        },
        {
          "label": "Bottom",
          "value": "bottom"
        }
      ]
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "default": "back",
      "options": [
        {
          "label": "Front",
          "value": "front"
        },
        {
          "label": "Back",
          "value": "back"
        }
      ]
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Gift card"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Looking for something for someone special? A gift card to our store is the perfect idea!"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show button",
      "default": false
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "default": "middle",
      "options": [
        {
          "label": "Top",
          "value": "top"
        },
        {
          "label": "Middle",
          "value": "middle"
        },
        {
          "label": "Bottom",
          "value": "bottom"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Highlight",
      "category": "Image"
    }
  ]
}
{% endschema %}
